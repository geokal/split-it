<div class="professional-loading">
    <div class="loading-content">
        <div class="loading-spinner">
            <div class="spinner-circle"></div>
            <div class="spinner-circle"></div>
            <div class="spinner-circle"></div>
        </div>
        <div class="loading-text">
            <span class="loading-title">@Title</span>
            <span class="loading-subtitle">@Subtitle</span>
        </div>
    </div>
    <div class="loading-progress">
        <div class="progress-bar">
            <div class="progress-fill"></div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Φορτώνει, Παρακαλώ Περιμένετε...";

    [Parameter]
    public string Subtitle { get; set; } = "Γίνεται προετοιμασία του περιεχομένου";
}
