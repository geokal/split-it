    private async Task LoadPublications()
    {
        Console.WriteLine("LoadPublications() started - Parallel Fetching");
        isLoadingPublications = true;
        publicationsErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            // Clear the list before starting
            MemberPublications.Clear();

            // 1. Prepare a unified list of members (Professors & Students) to fetch
            var membersToFetch = SelectedProfessorDetails
                .Where(p => !string.IsNullOrEmpty(p.Email) && !string.IsNullOrEmpty(p.GoogleScholarProfile))
                .Select(p => new { p.Email, Profile = p.GoogleScholarProfile, Type = "Professor" })
                .Concat(SelectedStudentDetails
                    .Where(s => !string.IsNullOrEmpty(s.Email) && !string.IsNullOrEmpty(s.GoogleScholarProfile))
                    .Select(s => new { s.Email, Profile = s.GoogleScholarProfile, Type = "Student" }))
                .Distinct()
                .ToList();

            Console.WriteLine($"Found {membersToFetch.Count} members with Google Scholar profiles");

            if (membersToFetch.Any())
            {
                // 2. Use SemaphoreSlim to limit concurrency
                // '3' means max 3 simultaneous requests. This speeds up loading ~3x
                // without being aggressive enough to get banned by Google (Error 429).
                using var semaphore = new System.Threading.SemaphoreSlim(3);

                // 3. Create a list of Tasks
                var tasks = membersToFetch.Select(async member =>
                {
                    await semaphore.WaitAsync(); // Wait for an open slot
                    try
                    {
                        // Fetch data
                        var scholarPubs = await _googleScholarService.GetPublications(member.Profile);

                        // Map to your DB entity format immediately
                        // We return a list here instead of adding to 'MemberPublications' directly
                        // to keep it thread-safe.
                        return scholarPubs.Select(pub => new ResearchGroup_Publications
                            {
                                PK_ResearchGroupEmail = newResearchGroup.ResearchGroupEmail,
                                PK_ResearchGroupMemberEmail = member.Email,
                                PK_ResearchGroupMemberPublication_Title = pub.Title,
                                PK_ResearchGroupMemberPublication_CitedBy = pub.CitedBy,
                                PK_ResearchGroupMemberPublication_Year = pub.Year,
                                PK_ResearchGroupMemberPublication_Authors = pub.Authors,
                                PK_ResearchGroupMemberPublication_Journal = pub.Journal,
                                PK_ResearchGroupMemberPublication_Url = pub.Url,
                                MemberType = member.Type
                            }).ToList();
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error fetching for {member.Email}: {ex.Message}");
                        // Return empty list on failure so the whole process doesn't crash
                        return new List<ResearchGroup_Publications>();
                    }
                    finally
                    {
                        semaphore.Release(); // Always release the slot
                    }
                });

                // 4. Run all tasks and wait for them to finish
                var results = await Task.WhenAll(tasks);

                // 5. Aggregate all results into the main list on the main thread
                foreach (var resultList in results)
                {
                    MemberPublications.AddRange(resultList);
                }

                Console.WriteLine($"Total publications found: {MemberPublications.Count}");
            }
            else
            {
                Console.WriteLine("No member emails with Google Scholar profiles found");
            }
        }
        catch (Exception ex)
        {
            publicationsErrorMessage = $"Σφάλμα κατά τη φόρτωση των δημοσιεύσεων: {ex.Message}";
            Console.WriteLine($"Error loading publications: {ex}");
        }
        finally
        {
            isLoadingPublications = false;
            StateHasChanged();
            Console.WriteLine("LoadPublications() completed");
        }
    }

