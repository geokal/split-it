    private void AddIpodomeKeyword(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(ipodomeKeywordsInput))
        {
            var cleanInput = ipodomeKeywordsInput.Trim().Replace(",", ""); 

            if (string.IsNullOrEmpty(tempIpodome.ResearchGroup_Ipodomes_Keywords))
            {
                tempIpodome.ResearchGroup_Ipodomes_Keywords = cleanInput;
            }
            else
            {
                var currentKeywords = tempIpodome.ResearchGroup_Ipodomes_Keywords.Split(',').Select(k => k.Trim()).ToList();
                if (!currentKeywords.Contains(cleanInput))
                {
                    tempIpodome.ResearchGroup_Ipodomes_Keywords += "," + cleanInput;
                }
            }
            ipodomeKeywordsInput = ""; 
        }
    }

    private void RemoveIpodomeKeyword(string keyword)
    {
        if (!string.IsNullOrEmpty(tempIpodome.ResearchGroup_Ipodomes_Keywords))
        {
            var keywords = tempIpodome.ResearchGroup_Ipodomes_Keywords.Split(',')
                .Select(k => k.Trim())
                .Where(k => k != keyword)
                .ToList();

            tempIpodome.ResearchGroup_Ipodomes_Keywords = string.Join(",", keywords);
        }
    }

    private async Task HandleIpodomeImages(InputFileChangeEventArgs e)
    {
        ipodomeImagePreviews.Clear();
        tempImageBytes.Clear();

        var files = e.GetMultipleFiles(5);
        long maxFileSize = 2 * 1024 * 1024; 

        foreach (var file in files)
        {
            try
            {
                if (file.Size > maxFileSize)
                {
                    continue;
                }

                using var stream = new MemoryStream();
                await file.OpenReadStream(maxFileSize).CopyToAsync(stream);

                tempImageBytes.Add(stream.ToArray());
                ipodomeImagePreviews.Add(file.Name);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Image load error: {ex.Message}");
            }
        }

        if (tempImageBytes.Count > 0)
        {
            tempIpodome.ResearchGroup_Ipodomes_Images = tempImageBytes[0];
        }
    }

