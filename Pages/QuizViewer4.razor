        {
            Console.WriteLine($"BLOCKED: Attempt to add research group duplicate - Name: {name}, IsSubField: {isSubField}, Parent: {parentArea}");
            return;
        }

        var uniqueId = isSubField ? $"SUBFIELD_{parentArea}_{name}" : $"AREA_{name}";

        // Final safety check
        if (selectedResearchGroupAreas.Any(item => item.UniqueId == uniqueId))
        {
