    private void OnPhoneNumberInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? "";
    
        // Allow only digits and + at the beginning
        var cleaned = new StringBuilder();
        bool hasPlus = false;
    
        foreach (char c in input)
        {
            if (c == '+' && cleaned.Length == 0)
            {
                cleaned.Append(c);
                hasPlus = true;
            }
            else if (char.IsDigit(c))
            {
                // Limit to 12 digits total (excluding the + sign)
                int currentDigits = cleaned.Length - (hasPlus ? 1 : 0);
                if (currentDigits < 12)
                {
                    cleaned.Append(c);
                }
            }
        }
    
        newResearchGroup.ResearchGroupTelephoneNumber = cleaned.ToString();
    }

