    .researchpatents-selection-container {
        border: 2px solid black; /* The black border */
        border-radius: 0.5rem;   /* Rounded corners to match your design */
        padding: 5px;            /* Optional spacing */
        margin-bottom: 20px;     /* Space between the boxes */
