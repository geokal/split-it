            };

        selectedResearchGroupAreas.Add(newItem);
        Console.WriteLine($"SUCCESS: Added research group area - UniqueId: {newItem.UniqueId}, Name: {name}, Type: {(isSubField ? "Subfield" : "Area")}, Custom: {!isSubField && !availableResearchGroupAreas.Any(a => a.AreaName.Equals(name, StringComparison.OrdinalIgnoreCase))}");
