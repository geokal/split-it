/* --- CONTAINER (Fluid Height & Black Border) --- */
.calendar-section {
    /* POSITIONING */
    padding: 20px;
    margin-top: 20px;
    position: relative;
    /* CHANGED: auto height allows it to grow with the calendar */
    height: auto; 
    min-height: 430px; 
    box-sizing: border-box;

    /* STYLE */
    background-color: #ffffff; 
    border-radius: 12px;
