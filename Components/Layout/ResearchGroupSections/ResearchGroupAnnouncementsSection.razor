                                                                        else
                                                                        {
                                                                            <span class="pagination-item @(pageNum == currentPageForResearchGroupAnnouncements ? "active" : "")" 
                                                                                  @onclick="@(() => GoToPageForResearchGroupAnnouncements(pageNum))">
                                                                                @pageNum
