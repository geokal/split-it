@using QuizManager.Models

@if (IsCompanyModalVisible && Company != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content" style="border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);">
                <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0; background-color: #f8f9fa;">
                    <h5 class="modal-title" style="color: #4682B4; font-weight: 600; font-size: 1.25rem;">
                        @(Company.CompanyNameENG ?? "Εταιρεία")
                    </h5>
                    <button type="button" class="btn-close" @onclick="OnCloseCompanyModal"></button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <!-- Company Logo -->
                    <div class="text-center mb-4">
                        @if (Company.CompanyLogo != null && Company.CompanyLogo.Length > 0)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(Company.CompanyLogo)" 
                                 alt="Company Logo"
                                 style="max-width: 150px; max-height: 150px; border-radius: 50%; object-fit: cover; border: 3px solid #ddd;" />
                        }
                        else
                        {
                            <div style="width: 150px; height: 150px; border-radius: 50%; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; margin: 0 auto; border: 3px solid #ddd;">
                                <i class="fas fa-building" style="font-size: 3rem; color: #6c757d;"></i>
                            </div>
                        }
                    </div>

                    <!-- Details -->
                    <div class="row g-3">
                         <div class="col-md-6">
                            <label class="fw-bold">Τύπος</label>
                            <div class="form-control bg-light">@Company.CompanyType</div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Email</label>
                            <div class="form-control bg-light">@Company.CompanyEmail</div>
                        </div>
                         <div class="col-12">
                            <label class="fw-bold">Website</label>
                            <div class="form-control bg-light">
                                <a href="@Company.CompanyWebsite" target="_blank">@Company.CompanyWebsite</a>
                            </div>
                        </div>
                         <div class="col-12">
                            <label class="fw-bold">Περιγραφή</label>
                            <textarea class="form-control bg-light" readonly rows="3">@Company.CompanyDescription</textarea>
                        </div>
                         <div class="col-md-6">
                            <label class="fw-bold">Χώρα</label>
                            <div class="form-control bg-light">@Company.CompanyCountry</div>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Πόλη</label>
                            <div class="form-control bg-light">@Company.CompanyTown</div>
                        </div>
                         <div class="col-12">
                            <label class="fw-bold">Υπεύθυνος HR</label>
                            <div class="form-control bg-light">@Company.CompanyHRName @Company.CompanyHRSurname</div>
                        </div>
                         <div class="col-12">
                            <label class="fw-bold">Email HR</label>
                            <div class="form-control bg-light">@Company.CompanyHREmail</div>
                        </div>
                    </div>
                </div>
                 <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCloseCompanyModal">Κλείσιμο</button>
                </div>
            </div>
        </div>
    </div>
}

@if (IsStudentModalVisible && Student != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0, 0, 0, 0.5);">
         <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content" style="border-radius: 12px;">
                 <div class="modal-header bg-light">
                    <h5 class="modal-title text-primary font-weight-bold">
                        @Student.Name @Student.Surname
                    </h5>
                    <button type="button" class="btn-close" @onclick="OnCloseStudentModal"></button>
                </div>
                 <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <!-- Photo -->
                     <div class="text-center mb-4">
                        @if (Student.Image != null && Student.Image.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Student.Image)" 
                                 class="rounded-circle border" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                             <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                                <i class="fas fa-user fa-3x text-muted"></i>
                            </div>
                        }
                    </div>
                    
                    <!-- Info -->
                    <div class="row g-3">
                         <div class="col-md-6">
                            <label class="fw-bold">Πανεπιστήμιο</label>
                            <div class="form-control bg-light">@Student.University</div>
                        </div>
                         <div class="col-md-6">
                            <label class="fw-bold">Τμήμα</label>
                            <div class="form-control bg-light">@Student.Department</div>
                        </div>
                         <div class="col-md-6">
                            <label class="fw-bold">Email</label>
                            <div class="form-control bg-light">@Student.Email</div>
                        </div>
                         <div class="col-md-6">
                            <label class="fw-bold">Τηλέφωνο</label>
                            <div class="form-control bg-light">@Student.Telephone</div>
                        </div>
                        <div class="col-12">
                            <label class="fw-bold">Bio</label>
                             <textarea class="form-control bg-light" readonly rows="3">@Student.Keywords</textarea>
                        </div>
                        
                        <div class="col-12 text-center mt-4">
                            @if (Student.Attachment != null)
                            {
                                <button class="btn btn-dark" @onclick="() => OnDownloadCV.InvokeAsync(Student.Email)">
                                    <i class="fas fa-download me-2"></i>Λήψη Βιογραφικού
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">Δεν διατίθεται βιογραφικό.</span>
                            }
                        </div>
                    </div>
                 </div>
                 <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="OnCloseStudentModal">Κλείσιμο</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Company Company { get; set; }
    [Parameter] public bool IsCompanyModalVisible { get; set; }
    [Parameter] public EventCallback OnCloseCompanyModal { get; set; }

    [Parameter] public Student Student { get; set; }
    [Parameter] public bool IsStudentModalVisible { get; set; }
    [Parameter] public EventCallback OnCloseStudentModal { get; set; }
    
    [Parameter] public EventCallback<string> OnDownloadCV { get; set; }
}
