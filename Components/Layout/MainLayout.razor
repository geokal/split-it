    /* THE FIX: Clips corners properly */
    overflow: hidden; 
    padding-bottom: 30px; 
}

/* --- CALENDAR BODY (The Fix) --- */
.calendar {
    /* POSITIONING */
    position: relative; /* Stacks naturally below header */
    
    /* CRITICAL FIX: Reset these to 0 to remove the "Half View" gap */
    top: 0 !important; 
    left: 0 !important;
    margin-top: 10px; 
    
    width: 100%;
    height: auto; /* Grows to show all weeks */
    overflow: visible; /* No scrollbar */
    box-sizing: border-box;

    /* STYLE */
    background-color: #ffffff;
    padding: 15px;
    border-top: 1px solid #ddd; 
    color: #333;
}

/* --- HEADERS --- */
.calendar-section strong {
    display: block;
    text-align: center;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.1em;
    margin-bottom: 15px;
}

