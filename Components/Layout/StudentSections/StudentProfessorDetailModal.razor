@* StudentProfessorDetailModal.razor - Reusable Professor Details Modal for Student sections *@

@if (Professor != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content" style="border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);">
                <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0; background-color: #f8f9fa;">
                    <h5 class="modal-title" style="color: #4682B4; font-weight: 600; font-size: 1.25rem;">
                        @Professor.ProfName @Professor.ProfSurname
                    </h5>
                    <button type="button" class="modern-button" style="background-color: #2d3748; color: white; border: none; border-radius: 6px; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; transition: all 0.2s;" 
                            @onclick="OnClose"
                            onmouseover="this.style.backgroundColor='#4a5568'" 
                            onmouseout="this.style.backgroundColor='#2d3748'">
                        <span style="font-size: 1.2rem; line-height: 1;">×</span>
                    </button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <!-- Profile Picture -->
                    <div class="form-group text-center">
                        @if (Professor.ProfImage != null)
                        {
                            var base64Image = Convert.ToBase64String(Professor.ProfImage);
                            <img src="data:image/jpeg;base64,@base64Image" alt="Φωτογραφία Προφίλ Καθηγητή" 
                                 style="max-width: 150px; max-height: 150px; border-radius: 50%; object-fit: cover;" />
                        }
                        else
                        {
                            <p style="color: #6c757d;">Δεν υπάρχει φωτογραφία Προφίλ</p>
                        }
                    </div>

                    <!-- Name and Surname -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Όνομα</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-user" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Professor.ProfName</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="font-weight: bold;">Επώνυμο</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-user" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Professor.ProfSurname</span>
                        </div>
                    </div>

                    <!-- University & Department -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Πανεπιστήμιο</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-university" style="color: #4682B4; margin-right: 8px;"></i>
                            <span>@Professor.ProfUniversity</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Τμήμα</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-building" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Professor.ProfDepartment</span>
                        </div>
                    </div>

                    <!-- Academic Rank & Contact Info -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Βαθμίδα ΔΕΠ</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-user-tie" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Professor.ProfVahmidaDEP</span>
                        </div>
                    </div>

                    <!-- Professor Email -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Email</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-envelope" style="color: #4682B4; margin-right: 8px;"></i>
                            @if (!string.IsNullOrEmpty(Professor.ProfEmail))
                            {
                                <a href="mailto:@Professor.ProfEmail" 
                                   style="color: #007bff; text-decoration: underline; word-break: break-all;">
                                    @Professor.ProfEmail
                                </a>
                            }
                            else
                            {
                                <span style="color: #6c757d;">Δεν υπάρχει email</span>
                            }
                        </div>
                    </div>

                    <!-- Professor Work and Personal Telephone -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Τηλέφωνο Εργασίας</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-phone" style="color: #28a745; margin-right: 8px;"></i>
                            <span>@Professor.ProfWorkTelephone</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Προσωπικό Τηλέφωνο</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-phone" style="color: #28a745; margin-right: 8px;"></i>
                            @if (!string.IsNullOrEmpty(Professor.ProfPersonalTelephone))
                            {
                                <span>@Professor.ProfPersonalTelephone</span>
                            }
                            else
                            {
                                <span style="color: #6c757d;">Δεν Διατίθεται</span>
                            }
                        </div>
                    </div>

                    <!-- LinkedIn Profile -->
                    <div class="form-group">
                        <label style="font-weight: bold;">LinkedIn</label>
                        @if (!string.IsNullOrEmpty(Professor.ProfLinkedInSite))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; cursor: pointer;" 
                                 onclick="window.open('@Professor.ProfLinkedInSite', '_blank')">
                                <i class="fab fa-linkedin" style="color: #0A66C2; margin-right: 8px;"></i>
                                <span style="color: #0A66C2; text-decoration: underline;">@Professor.ProfLinkedInSite</span>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fab fa-linkedin" style="color: #6c757d; margin-right: 8px;"></i>
                                <span style="color: #6c757d;">Δεν Διατίθεται</span>
                            </div>
                        }
                    </div>

                    <!-- Personal Website -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Ιστότοπος</label>
                        @if (!string.IsNullOrEmpty(Professor.ProfPersonalWebsite))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; cursor: pointer;" 
                                 onclick="window.open('@Professor.ProfPersonalWebsite', '_blank')">
                                <i class="fas fa-globe" style="color: #007bff; margin-right: 8px;"></i>
                                <span style="color: #007bff; text-decoration: underline;">@Professor.ProfPersonalWebsite</span>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fas fa-globe" style="color: #6c757d; margin-right: 8px;"></i>
                                <span style="color: #6c757d;">Δεν Διατίθεται</span>
                            </div>
                        }
                    </div>

                    <!-- Google Scholar -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Scholar Profile</label>
                        @if (!string.IsNullOrEmpty(Professor.ProfScholarProfile))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; cursor: pointer;" 
                                 onclick="window.open('@Professor.ProfScholarProfile', '_blank')">
                                <i class="fas fa-graduation-cap" style="color: #4285F4; margin-right: 8px;"></i>
                                <span style="color: #4285F4; text-decoration: underline;">@Professor.ProfScholarProfile</span>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fas fa-graduation-cap" style="color: #6c757d; margin-right: 8px;"></i>
                                <span style="color: #6c757d;">Δεν Διατίθεται</span>
                            </div>
                        }
                    </div>

                    <!-- ORCID -->
                    <div class="form-group">
                        <label style="font-weight: bold;">ORCID Profile</label>
                        @if (!string.IsNullOrEmpty(Professor.ProfOrchidProfile))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; cursor: pointer;" 
                                 onclick="window.open('@Professor.ProfOrchidProfile', '_blank')">
                                <i class="fas fa-id-card" style="color: #A6CE39; margin-right: 8px;"></i>
                                <span style="color: #A6CE39; text-decoration: underline;">@Professor.ProfOrchidProfile</span>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fas fa-id-card" style="color: #6c757d; margin-right: 8px;"></i>
                                <span style="color: #6c757d;">Δεν Διατίθεται</span>
                            </div>
                        }
                    </div>

                    <!-- Expanded fields with textarea -->
                    <div class="form-group">
                        <label style="font-weight: bold;">Πεδίο Εργασίας</label>
                        <textarea class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" rows="3" readonly>@Professor.ProfGeneralFieldOfWork</textarea>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Τεχνικές Δεξιότητες/Ενδιαφέροντα</label>
                        <textarea class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" rows="3" readonly>@Professor.ProfGeneralSkills</textarea>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Σύντομη Περιγραφή</label>
                        <textarea class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" rows="3" readonly>@Professor.ProfPersonalDescription</textarea>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Βιογραφικό</label>
                        @if (Professor.ProfCVAttachment != null)
                        {
                            <div class="d-flex align-items-center">
                                <a href="data:application/pdf;base64,@Convert.ToBase64String(Professor.ProfCVAttachment)" 
                                   download="ProfCV.pdf" 
                                   class="modern-button" 
                                   style="background-color: #2d3748; color: white; border: none; border-radius: 6px; padding: 8px 16px; text-decoration: none; transition: all 0.2s;"
                                   onmouseover="this.style.backgroundColor='#4a5568'" 
                                   onmouseout="this.style.backgroundColor='#2d3748'">
                                    <i class="fas fa-download me-2"></i>Λήψη Βιογραφικού
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; color: #dc3545;">
                                <i class="fas fa-exclamation-circle" style="margin-right: 8px;"></i>
                                <span><strong>Δεν υπάρχει διαθέσιμο βιογραφικό</strong></span>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="modern-button" style="background-color: #2d3748; color: white; border: none; border-radius: 6px; padding: 8px 20px; transition: all 0.2s;" 
                            @onclick="OnClose"
                            onmouseover="this.style.backgroundColor='#4a5568'" 
                            onmouseout="this.style.backgroundColor='#2d3748'">
                        <i class="fas fa-arrow-left me-2"></i> Κλείσιμο
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public QuizManager.Models.Professor? Professor { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
