@* StudentJobDetailModal.razor - Reusable modal for Job details display *@

@if (Job != null)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content" style="border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);">
                <div class="modal-header" style="border-bottom: 1px solid #e9ecef; border-radius: 12px 12px 0 0; background-color: #f8f9fa;">
                    <h5 class="modal-title" style="color: #4682B4; font-weight: 600; font-size: 1.25rem;">@Job.PositionTitle</h5>
                    <button type="button" class="modern-button" style="background-color: #2d3748; color: white; border: none; border-radius: 6px; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; transition: all 0.2s;" 
                            @onclick="OnClose"
                            onmouseover="this.style.backgroundColor='#4a5568'" 
                            onmouseout="this.style.backgroundColor='#2d3748'">
                        <span style="font-size: 1.2rem; line-height: 1;">×</span>
                    </button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <div class="form-group">
                        <label style="font-weight: bold;">Τύπος Θέσης</label>
                        <input type="text" class="form-control" style="border-radius: 8px; background-color: #f8f9fa;"
                               value="@(Job.PositionType == "Full-Time" ? "Πλήρους Απασχόλησης" :
                                       Job.PositionType == "Part-Time" ? "Μερικής Απασχόλησης" :
                                       Job.PositionType == "Simvasi-Ergou" ? "Σύμβαση Έργου" :
                                       Job.PositionType)"
                               readonly />
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Όνομα Εταιρείας</label>
                        @if (!string.IsNullOrWhiteSpace(Job.Company?.CompanyName))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fas fa-industry" style="color: #5F9EA0; margin-right: 8px;"></i>
                                <span>@Job.Company.CompanyName</span>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" value="Δεν υπάρχει" readonly />
                        }
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Περιγραφή Θέσης</label>
                        <textarea class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" rows="4" readonly>@Job.PositionDescription</textarea>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Φορέας</label>
                        <input type="text" class="form-control" style="border-radius: 8px; background-color: #f8f9fa;"
                               value="@Job.PositionForeas" readonly />
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Email Επικοινωνίας</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-envelope" style="color: #4682B4; margin-right: 8px;"></i>
                            @if (!string.IsNullOrEmpty(Job.PositionContactPerson))
                            {
                                <a href="mailto:@Job.PositionContactPerson"
                                   style="color: #007bff; text-decoration: underline; word-break: break-all;">
                                    @Job.PositionContactPerson
                                </a>
                            }
                            else
                            {
                                <span style="color: #6c757d;">Δεν υπάρχει email</span>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Τηλέφωνο Επικοινωνίας</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-phone-alt" style="color: #28a745; margin-right: 8px;"></i>
                            <span>@Job.PositionContactTelephonePerson</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Διεύθυνση</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-map-marker-alt" style="color: #dc3545; margin-right: 8px;"></i>
                            <a href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(Job.PositionAddressLocation ?? "")"
                               target="_blank"
                               style="color: #007bff; text-decoration: underline; word-break: break-word;">
                                @Job.PositionAddressLocation
                            </a>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Περιφέρεια</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-map-marked-alt" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Job.PositionPerifereiaLocation</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Δήμος</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-city" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Job.PositionDimosLocation</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Ταχυδρομικός Κώδικας</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-envelope-open-text" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Job.PositionPostalCodeLocation</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Παροχή Μεταφοράς</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; @(Job.PositionTransportOffer ? "color: #28a745;" : "color: #dc3545;")">
                            <i class="fas fa-car" style="margin-right: 8px;"></i>
                            <span style="font-weight: 500;">
                                @(Job.PositionTransportOffer ? "Ναι" : "Όχι")
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Περιοχές Ενδιαφέροντος</label>
                        <textarea class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" rows="3" readonly>@Job.PositionAreas</textarea>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Ξεκινάει από</label>
                        <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                            <i class="fas fa-calendar-alt" style="color: #5F9EA0; margin-right: 8px;"></i>
                            <span>@Job.PositionActivePeriod.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Κατάσταση Θέσης</label>
                        <input type="text" class="form-control" style="border-radius: 8px; background-color: #f8f9fa;"
                               value="@Job.PositionStatus" readonly />
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Υπεύθυνο Τμήμα Εταιρείας</label>
                        @if (!string.IsNullOrWhiteSpace(Job.PositionDepartment))
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa;">
                                <i class="fas fa-building" style="color: #5F9EA0; margin-right: 8px;"></i>
                                <span>@Job.PositionDepartment</span>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control" style="border-radius: 8px; background-color: #f8f9fa;" value="Δεν έχει διευκρινιστεί" readonly />
                        }
                    </div>

                    <div class="form-group">
                        <label style="font-weight: bold;">Συνημμένο</label>
                        @if (Job.PositionAttachment != null)
                        {
                            <div class="d-flex align-items-center">
                                <a href="@("data:application/pdf;base64," + Convert.ToBase64String(Job.PositionAttachment))" 
                                   download="JobApplicationAttachment.pdf" 
                                   class="modern-button" 
                                   style="background-color: #2d3748; color: white; border: none; border-radius: 6px; padding: 8px 16px; text-decoration: none; transition: all 0.2s;"
                                   onmouseover="this.style.backgroundColor='#4a5568'" 
                                   onmouseout="this.style.backgroundColor='#2d3748'">
                                    <i class="fas fa-download me-2"></i>Λήψη Αρχείου
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="form-control d-flex align-items-center" style="height: auto; border-radius: 8px; background-color: #f8f9fa; color: #dc3545;">
                                <i class="fas fa-exclamation-circle" style="margin-right: 8px;"></i>
                                <span><strong>Δεν υπάρχει συνημμένο</strong></span>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="modern-button" style="background-color: #2d3748; color: white; border: none; border-radius: 6px; padding: 8px 20px; transition: all 0.2s;" 
                            @onclick="OnClose"
                            onmouseover="this.style.backgroundColor='#4a5568'" 
                            onmouseout="this.style.backgroundColor='#2d3748'">
                        <i class="fas fa-arrow-left me-2"></i> Κλείσιμο
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public QuizManager.Models.CompanyJob? Job { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }
}
